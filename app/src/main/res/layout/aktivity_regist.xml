<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/loading_buat_akun1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan Registrasi"
            android:textColor="@color/babu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp" />

        <EditText
            android:id="@+id/e_text_email_regist"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:hint="Email"
            android:textColorHint="@color/warnaPutih"
            android:textColor="@color/warnaPutih"
            android:paddingStart="10dp"
            android:layout_margin="10dp"
            android:background="@color/babu"
            android:textSize="17sp"
            tools:ignore="RtlSymmetry"
            android:autofillHints="email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/e_text_username"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:hint="Username"
            android:textColorHint="@color/warnaPutih"
            android:textColor="@color/warnaPutih"
            android:paddingStart="10dp"
            android:layout_margin="10dp"
            android:background="@color/babu"
            android:textSize="17sp"
            tools:ignore="RtlSymmetry"
            android:autofillHints="email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/e_text_full_name"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:hint="Full Nama"
            android:textColorHint="@color/warnaPutih"
            android:textColor="@color/warnaPutih"
            android:paddingStart="10dp"
            android:layout_margin="10dp"
            android:background="@color/babu"
            android:textSize="17sp"
            tools:ignore="RtlSymmetry"
            android:autofillHints="email"
            android:inputType="textPersonName" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/e_text_password_regist"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:hint="Password"
            android:textColorHint="@color/warnaPutih"
            android:textColor="@color/warnaPutih"
            android:paddingStart="10dp"
            android:layout_margin="15dp"
            app:drawable_hide="@drawable/ic_tampil_password"
            app:drawable_show="@drawable/ic_sembunyikan_password"
            android:background="@color/babu"
            android:textSize="17sp"
            tools:ignore="RtlSymmetry"
            android:autofillHints="password" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/e_text_password_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:hint="Konfirmasi Password"
            android:textColorHint="@color/warnaPutih"
            android:textColor="@color/warnaPutih"
            android:paddingStart="10dp"
            android:layout_margin="15dp"
            app:drawable_hide="@drawable/ic_tampil_password"
            app:drawable_show="@drawable/ic_sembunyikan_password"
            android:background="@color/babu"
            android:textSize="17sp"
            tools:ignore="RtlSymmetry"
            android:autofillHints="password" />

        <Button
            android:id="@+id/btn_buat_akun"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginHorizontal="15dp"
            android:text="Buat Akun"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/t_view_login"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/loading_buat_akun" />
    </LinearLayout>

</RelativeLayout>